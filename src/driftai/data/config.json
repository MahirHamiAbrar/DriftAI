{
    "data_dir": "data",
    
    "audio": {
        "recorder": {
            "channels": 2,
            "rate": 44100,
            "chunk_size": 1024,
            "sampling_format": "i16",
            "available_sampling_formats": [
                "i8", "i16", "i24", "i32", "f32"
            ],
            "recording_format": "mp3",
            "available_recording_formats": [
                "wav", "mp3"
            ],
            "chunk_duration": 5,
            "output_dir": "{data_dir}/audio_recordings"
        },

        "stt": {
            "model_name": "turbo",
            "device": "cuda",
            "preload_in_memory": false,
            "download_root": "/WindowsDrive/LLM/Whisper",
            "default_download_root": "{data_dir}/models/stt",
            
            "verbose": null,
            "temperature": 0.8,
            "word_timestamps": true,
            "clip_timestamps": "0",

            "host": "http://127.0.0.1",
            "port": 8000
        },

        "tts": {
            "cache_dir": "{data_dir}/models/hf_hub",
            "local_dir": "{data_dir}/models/tts",
            
            "model_name": "hexgrad/Kokoro-82M",
            "lang_code": "a",

            "voice": "am_michael",
            "speed": 1.2,
            "split_pattern": "\n+",

            "host": "http://127.0.0.1",
            "port": 9000
        }
    },


    "logging": {
        "log_dir": "{data_dir}/logs"
    }
}